{% if section.settings['show-announcement'] %}
  <section> 
    <div class="announcement-bar">


      <div class="announcement-bar-left-section">
        {%   if section.settings.image != blank %}
          <img 
            width="40"
            height="40"
            loading="lazy"
            src="{{ section.settings.image | image_url }}" />
        {% else %} 
          <img 
            width="40"
            height="40"
            loading="lazy"
            src="{{ 'a.png' | asset_url }}" />
        {% endif %}
      </div>

      <div class="announcement-bar-right-section">
        <ul class="announcement-bar-inner-list">
          {% if section.block.size == 0 %}
            <li>
              <a href="#">Help</a>
            </li>
          
            {% if customer.customer_accounts_enabled %}
              {% if customer %}
                <li>
                  <a href="/account">Account</a>
                </li>
              {% else %}
                <a href="/account/login">Sign in</a>
              {% endif %}
            {% endif %}
          {% else %}
            {% for block in section.block %}
              <li>
                <a href="{{ block.settings.link }}">{{ block.settings.text }}</a>
              </li>
            {% endfor %}
          {% endif %}

        </ul>

      </div>
    </div>
  </section>
{%  endif %}

<style>
  .announcement-bar{
    background: {{ section.settings.background }}
    ;
    color: {{ section.settings.text_color }}
    ;
  }

</style>

{% schema %}
{
  "name" : "Announcement Bar",
  "settings": [
    {
      "type" : "checkbox",
      "id" : "show-announcement",
      "label" : "Show Annoucement",
      "default" : true
    },
    {
      "type" : "image_picker",
      "id" : "image",
      "label" : "pick image",
      "info" : "400 x 120px .png recommended" 
    },
    {
      "type" : "image_picker",
      "id" : "image_2",
      "label" : "pick image ",
      "info" : "400 x 120px .png recommended" 
    },
    {
      "type" : "color",
      "id" : "background",
      "label" : "Background",
      "default" : "#73706f"
    },
    {
      "type" : "color",
      "id" : "text_color",
      "label" : "Text",
      "default" : "#000000"
    }
  ],
  "blocks": [
    {
      "name" : "Links",
      "type": "links",
      "limit" : 4,
      "settings": [
        {
        "type" : "text",
        "id": "text",
        "label" : "Text",
        "default" : "link"
        },{
          "type" : "url",
          "id" : "link",
          "label" : "link"
        }

      ]
    }
  ],
  "presets" : []
}
{% endschema %}