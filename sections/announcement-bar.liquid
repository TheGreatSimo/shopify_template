{% if section.settings['show-announcement'] %}
  <section> 
    <div class="announcement-bar">


      <div class="announcement-bar-left-section">
        {%   if section.settings.image != blank %}
          <img 
            width="40"
            height="40"
            loading="lazy"
            src="{{ section.settings.image | image_url }}" />
        {% else %} 
          <img 
            width="40"
            height="40"
            loading="lazy"
            src="{{ 'a.png' | asset_url }}" />
        {% endif %}
      </div>

      <div class="announcement-bar-right-section">
        {%   if section.settings.image_2 != blank %}
          <img 
            width="40"
            height="40"
            loading="lazy"
            src="{{ section.settings.image_2 | image_url }}" />
        {% else %} 
          <img 
            width="40"
            height="40"
            loading="lazy"
            src="{{ 'b.png' | asset_url }}" />
        {% endif %}

      </div>
    </div>
  </section>
{%  endif %}

<style>
  .announcement-bar{
    background: {{ section.settings.background }}
    ;
    color: {{ section.settings.text_color }}
    ;
  }

</style>

{% schema %}
{
  "name" : "Announcement Bar",
  "settings": [
    {
      "type" : "checkbox",
      "id" : "show-announcement",
      "label" : "Show Annoucement",
      "default" : true
    },
    {
      "type" : "image_picker",
      "id" : "image",
      "label" : "pick image",
      "info" : "400 x 120px .png recommended" 
    },
    {
      "type" : "image_picker",
      "id" : "image_2",
      "label" : "pick image ",
      "info" : "400 x 120px .png recommended" 
    },
    {
      "type" : "color",
      "id" : "background",
      "label" : "Background",
      "default" : "#242322"
    },
    {
      "type" : "color",
      "id" : "text_color",
      "label" : "Text",
      "default" : "#000000"
    }
  ],
  "presets" : []
}
{% endschema %}